<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kotlincoders.android.networkconnection.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/AsyncTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:onClick="startDownload"
            android:text="Call AsyncTask Connection"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/OkHTTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:background="@android:color/holo_orange_dark"
            android:gravity="center"
            android:onClick="startDownload"
            android:text="Call OkHTTP Connection "
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/Volley"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:onClick="startDownload"
            android:text="Call Volley Connection "
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/RetrofitCalls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:background="@android:color/holo_red_dark"
            android:gravity="center"
            android:onClick="startDownload"
            android:text="Call RetrofitCalls Connection "
            android:textColor="@android:color/background_light" />


        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Responces:"
            android:textColor="@android:color/holo_green_dark" />



    </LinearLayout>


</ScrollView>
